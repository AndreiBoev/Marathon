<Window x:Class="MarathonApp.WindowContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonApp"
        mc:Ignorable="d"
        Title="WindowContact" WindowStartupLocation="CenterOwner" Height="300" Width="600" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <Grid>
        <Image HorizontalAlignment="Right" VerticalAlignment="Top" Source="Assets\Image\CloseIcon.png" Width="40" Margin="5" Name="ImClose" MouseDown="ImClose_MouseDown"></Image>
        <TextBlock Text="Контакты" Style="{StaticResource FontHeader}" HorizontalAlignment="Center"></TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Для получения дополнительной информации пожалуйста свяжитесь с координаторами" Style="{StaticResource FontBase}" ></TextBlock>
            <TextBlock Text="Телефон: +55 11 9988 7766" Style="{StaticResource FontBase}" ></TextBlock>
            <TextBlock Text="Email:  coordinators@marathonskills.org" Style="{StaticResource FontBase}" ></TextBlock>
        </StackPanel>
    </Grid>
</Window>
