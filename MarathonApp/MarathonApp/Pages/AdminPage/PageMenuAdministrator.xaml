<Page x:Class="MarathonApp.Pages.PageMenuAdministrator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMenuAdministrator">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="200*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Меню администраторов" Style="{StaticResource FontHeader}" Grid.ColumnSpan="2" Grid.RowSpan="1" HorizontalAlignment="Center"></TextBlock>
        <Button Grid.Column="0" Grid.Row="1" Content="Пользователи" Width="300" Height="60"></Button>
        <Button Grid.Column="0" Grid.Row="2" Content="Благотворительные организации" Width="300" Height="60"></Button>
        <Button Grid.Column="1" Grid.Row="1" Content="Волонтёры" Width="300" Height="60"></Button>
        <Button Grid.Column="1" Grid.Row="2" Content="Инвентарь" Width="300" Height="60"></Button>
    </Grid>
</Page>
