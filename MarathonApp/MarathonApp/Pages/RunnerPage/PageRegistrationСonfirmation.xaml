<Page x:Class="MarathonApp.Pages.RunnerPage.PageRegistrationСonfirmation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonApp.Pages.RunnerPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration confirmation">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна!" Style="{StaticResource FontHeader}" TextAlignment="Center"></TextBlock>
            <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна в Marathon Skills 2016!" Style="{StaticResource FontHeader}" Margin="20" TextAlignment="Center"></TextBlock>
            <TextBlock Text="С вами свяжутся по поводу оплаты." Style="{StaticResource FontHeader}" TextAlignment="Center"></TextBlock>
            <Button Content="ОК" Width="120" Name="BtnOK" Click="BtnOK_Click" Margin="20"></Button>
        </StackPanel>
    </Grid>
</Page>
